@model WebApplication6.Models.Evaluaciones
@{
    Layout = null;
}

<div class="modal-body container">
    @using (Html.BeginForm())
    {
        <div>
            <h4 class="tab-pane">¿Como valorara esta evaluacion?</h4>
            <hr />
            <p class="">Recuerde si Elimina, se borrara por completo del sistema</p>
            <div class="row justify-content-between">
                <div class="col-4">
                    @Html.ActionLink("Aprobar", "AprobarCurso", new { estado = true }, new { id = "submit1", @class = "btn btn-outline-success", type = "submit" })
                </div>
                <div class="col-4">
                    @Html.ActionLink("Denegar", "AprobarCurso", new { estado = false }, new { id = "submit2", @class = "btn btn-outline-danger" })
                </div>
            </div>
        </div>


    }
</div>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
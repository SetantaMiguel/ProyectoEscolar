@model WebApplication6.Models.CursoEscolar

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />

        <div class="form-horizontal">
            <h4 class="text-center alert alert-success">Editar el Curso</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_Curso)

            <div class="form-group ">
                @Html.LabelFor(model => model.NombredeCurso, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombredeCurso, new { htmlAttributes = new { @class = "form-control disabled" ,disabled=""} })
                    @Html.ValidationMessageFor(model => model.NombredeCurso, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Str_Modalidad, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Str_Modalidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Str_Modalidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Bl_Estado, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Bl_Estado)
                        @Html.ValidationMessageFor(model => model.Bl_Estado, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.Id_Año, "Año Escolar", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("Id_Año", null, htmlAttributes: new { @class = "form-control disabled"  })
                    @Html.ValidationMessageFor(model => model.Id_Año, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Id_Seccion, "Seccion", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Id_Seccion", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Seccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group text-md-center">
                <div class="col-md-offset-2">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>

@model WebApplication6.Models.EmpleadoMaterias

@{
    Layout = null;
}

<div class="container">
    <hr />
    <h2 class="alert alert-danger">¿Esta seguro de borrar esta clase del empleado?</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Empleado.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Empleado.NCompleto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Materias.Nombre_Materia)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Materias.Nombre_Materia)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions text-md-center">
                <input type="submit" value="Borrar" class="btn btn-danger" />
            </div>
            
        }
    </div>
    <hr />
</div>


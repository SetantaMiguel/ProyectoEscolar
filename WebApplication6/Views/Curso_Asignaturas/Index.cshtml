@model IEnumerable<WebApplication6.Models.Curso_Asignaturas>

@{

}
    <div class="container bg-light">
        <h3 class=""> Maestros del curso <span class="text-warning"> @ViewBag.NombreCurso </span> </h3>
        <p>
            @Html.ActionLink("Añadir Clase al Curso", "Create", null, new { @class = "btn btn-primary", data_modal = "" })
        </p>
        @if (Model.Count() == 0)
        {
            <div class="alert alert-secondary"> No hay Materias en el curso</div>
        }
        else
        {
            <table class="table table-hover table-striped">
                <tr class="bg-primary">
                    <th>
                        @Html.DisplayNameFor(model => model.Empleado.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Materias.Nombre_Materia)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Empleado.NCompleto, "Details", "Empleado", new { id = item.Id_Empleado }, new { @class = "btn btn-info" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Materias.Nombre_Materia)
                        </td>
                        <td>

                            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Curso_Asignatura }, new { @class = "btn btn-danger", data_modal = "" })
                        </td>
                    </tr>
                }

            </table>
        }


    </div>

@{Html.RenderAction("IndexCurso", "CursoEstudiantes", new { IdCurso = Convert.ToInt32(ViewBag.Id_Curso)});}
<script src="~/Scripts/modalform.js">
</script>

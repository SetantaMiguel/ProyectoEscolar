@model IEnumerable<WebApplication6.Models.EmpleadoCalendario>

@{

}

<div class="container">
    <hr />
    <h3 class="text-center m-auto border border-primary p-1">Calendario del Empleado</h3>
    <br />
    <div class="row">
        <div class="overflow-auto m-1 table-info" style="width:12rem;">
            <h4 class="text-center"> Lunes </h4>
            @foreach (var item in Model.Where(x => x.PeriodosEscolares.DiaSemana == "Lunes"))
            {
                <div class="">

                    <div class="card" style="">
                        <div class="card-body">
                            <h5 class="card-title">@item.Curso_Asignaturas.CursoEscolar.NombredeCurso</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@Html.ActionLink("Editar", "Edit", new { id = item.Id_Periodo }, new { @class = "", data_modal = "" })</h6>
                            <p class="card-text">@item.Curso_Asignaturas.Materias.Nombre_Materia</p>
                            <span class="border border-primary p-2">
                                <a class="card-link">@item.PeriodosEscolares.InicioPeriodo -</a>

                                <a class="card-link"> - @item.PeriodosEscolares.FinPeriodo</a>
                            </span>
                        </div>
                    </div>
                </div>

            }
            @if (Model.Where(x => x.PeriodosEscolares.DiaSemana == "Lunes").Count() == 0)
            {
                <div class="alert alert-danger">No hay Periodo</div>
            }
        </div>

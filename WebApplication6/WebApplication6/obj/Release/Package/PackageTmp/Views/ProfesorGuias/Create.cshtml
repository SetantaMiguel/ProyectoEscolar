@model WebApplication6.Models.ProfesorGuia

@{
    Layout = null;
}

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 class="alert alert-success shadow mt-2 border-success">Añadir profesor guia</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Id_Empleado, "Profesor", htmlAttributes: new { @class = "control-label " })
                <div class="">
                    @Html.DropDownList("Id_Empleado", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Empleado, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 ">
                    <input type="submit" id="Save" value="Guardar" class="btn btn-success shadow-sm" />
                </div>
            </div>
        </div>
    }

</div>

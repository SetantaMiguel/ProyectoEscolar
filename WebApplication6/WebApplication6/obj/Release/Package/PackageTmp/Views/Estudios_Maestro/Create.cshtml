@model WebApplication6.Models.Estudios_Maestro

@{
    ViewBag.Title = "Create";

}
<div class="container">
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="shadow h2 p-2 alert alert-primary text-center">Estudio de maestro </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Str_Tipo_Estudio, htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    <select class="form-control" name="Str_Tipo_Estudio">
                        <option value="Bachiller">
                            Bachiller
                        </option>
                        <option value="Licenciatura">
                            Licenciatura
                        </option>
                        <option value="Doctorado">
                            Doctorado
                        </option>
                        <option value="Tecnico">
                            Tecnico
                        </option>
                        <option value="Maestria">
                            Maestria
                        </option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Str_Tipo_Estudio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Str_Nombre_Estudio, htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Str_Nombre_Estudio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Str_Nombre_Estudio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Str_Centro_Estudio, htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Str_Centro_Estudio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Str_Centro_Estudio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Bl_Estado_Estudio, htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Bl_Estado_Estudio)
                        @Html.ValidationMessageFor(model => model.Bl_Estado_Estudio, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Fch_Finalizacion, htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Fch_Finalizacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fch_Finalizacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-success" /> |
                    @Html.ActionLink("Regresar", "Index", new { id = ViewBag.Id_Empleado }, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    }

</div>

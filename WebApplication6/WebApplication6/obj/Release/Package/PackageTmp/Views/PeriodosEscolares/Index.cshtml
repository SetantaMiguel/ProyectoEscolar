            <div class="overflow-auto m-1 table-info" style="width:12rem;">
                <h4 class="text-center"> Lunes </h4>
                @foreach (var item in Model.Where(x => x.DiaSemana == "Lunes").OrderBy(x => x.InicioPeriodo))
                {
                    <div class="">

                        <div class="card m-1" style="">
                            <div class="card-body shadow">
                                <h5 class="card-title">@item.Nombre_Periodo</h5>
                                <div class="row mb-2 justify-content-center ">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Periodo }, new { @class = "btn btn-info btn-sm mr-2", data_modal = "" })
                                    @Html.ActionLink("Desactivar", "Delete", new { id = item.Id_Periodo }, new { @class = "btn btn-danger btn-sm", data_modal = "" })
                                </div>
                                <div class="border border-primary p-2">
                                    <a class="card-link">@item.InicioPeriodo -</a>

                                    <a class="card-link"> - @item.FinPeriodo</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                @if (Model.Where(x => x.DiaSemana == "Lunes").Count() == 0)
                {
                    <div class="alert alert-danger shadow">No hay Periodo</div>
                }
            </div>

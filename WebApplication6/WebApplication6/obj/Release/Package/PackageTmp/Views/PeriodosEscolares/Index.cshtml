@model IEnumerable<WebApplication6.Models.PeriodosEscolares>
    <div class="container">
        <hr />
        <p>
            @Html.ActionLink("Crear un periodo", "Create", null, new { @class = "btn btn-success", data_modal = "" })
            @Html.ActionLink("Desactivar Horario", "DesactivarHorrario", null, new { @class = "btn btn-danger"})
        </p>

        <h3 class="alert alert-secondary display-4 text-center ">Calendario del Colegio @DateTime.Now.Year</h3>

@model IEnumerable<WebApplication6.Models.ProfesorGuia>

@{
    Layout = null;
}

    <div class="container">
        <br />
        <div class="alert shadow border border-dark text-center h3">Maestro guia</div>

        <hr />
        @if (Model.Count() == 0)
        {
            <p>
                @Html.ActionLink("Añadir Profesor", "Create", null, new { @class = "btn btn-success", data_modal = "" })
            </p>
            <div class="alert alert-danger shadow h2">
                Aun no hay maestro guia.
            </div>
            <hr />
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover shadow">
                    <tr class="table-info">
                        <th>
                            @Html.DisplayNameFor(model => model.CursoEscolar.NombredeCurso)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Empleado.Nombre)
                        </th>
                        <th class="text-center text-danger">
                            <i class="icon-remove icon-2x"></i>
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                
                                @Html.DisplayFor(modelItem => item.CursoEscolar.NombredeCurso)
                            </td>
                            <td>
                                @Html.ActionLink(item.Empleado.NCompleto, "Details", "Empleado", new { id = item.Id_Empleado },new { @class="btn btn-primary"})
                            </td>
                            <td>
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_ProfesorGuia },new {@class="btn btn-danger",data_modal="" })
                            </td>
                        </tr>
                    }

                </table>

            </div>

        }
    </div>

<script src="~/Scripts/modalform.js"></script>

@model IEnumerable<WebApplication6.Models.Estudios_Maestro>

@{
    ViewBag.Title = "Menu de estudios";
    
}

<div class="container">
    <hr />
    <h2 class="text-center alert alert-secondary">Estudios del empleado</h2>

    <p>
        @Html.ActionLink("Crear Estudio", "Create", null, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Regresar", "Details", "Empleado", new { id = ViewBag.aux }, new { @class = "btn btn-dark " })
    </p>
    <hr />
    <div class="table-responsive">
        <table class="table table-bordered table-hover ">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(model => model.Empleado.Codigo_Empleado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Str_Tipo_Estudio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Str_Nombre_Estudio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Str_Centro_Estudio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bl_Estado_Estudio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fch_Finalizacion)
                </th>
                <th>
                    Opciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="">
                    <td>
                        @Html.DisplayFor(modelItem => item.Empleado.Codigo_Empleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Str_Tipo_Estudio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Str_Nombre_Estudio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Str_Centro_Estudio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bl_Estado_Estudio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fch_Finalizacion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Estudio }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Estudio }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }

        </table>

    </div>

</div>

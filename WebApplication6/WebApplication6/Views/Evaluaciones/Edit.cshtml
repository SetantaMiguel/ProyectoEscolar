@model WebApplication6.Models.Evaluaciones

@{
    Layout = null;
}


    <div class="border border-secondary p-3 bg-light shadow-lg "     >

        @using (Html.BeginForm("Edit", "Evaluaciones", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 class="alert alert-success shadow p-2 text-center mt-1">Evaluacion</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id_Evaluacion)
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Comienzo, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Fecha_Comienzo, new { htmlAttributes = new { @class = "form-control", Value = @String.Format("{0:yyyy-MM-dd}", Model.Fecha_Comienzo) } })
                        @Html.ValidationMessageFor(model => model.Fecha_Comienzo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha_Final, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Fecha_Final, new { htmlAttributes = new { @class = "form-control" , Value = @String.Format("{0:yyyy-MM-dd}", Model.Fecha_Final)} })
                        @Html.ValidationMessageFor(model => model.Fecha_Final, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label " })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.BL_Aprobado, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.DisplayFor(modelitem=>Model.BL_Aprobado)
                            @Html.ValidationMessageFor(model => model.BL_Aprobado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Id_TipoEvaluacion, "Tipo de evaluacion", htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-10">
                        @Html.DropDownList("Id_TipoEvaluacion", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Id_TipoEvaluacion, "", new { @class = "text-danger" })
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" id="Save" value="Guardar" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
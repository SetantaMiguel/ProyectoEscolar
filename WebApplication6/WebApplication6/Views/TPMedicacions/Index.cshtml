@model IEnumerable<WebApplication6.Models.TPMedicacion>

@{
    ViewBag.Title = "Index";
}
<div class="container">
    <hr />
    <p>
        @Html.ActionLink("Añadir una nueva medicacion", "Create", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Regresar", "Index", "Enfermedads", null, new { @class = "btn btn-dark" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Str_Tipo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Str_Tipo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>

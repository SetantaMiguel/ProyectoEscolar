@model WebApplication6.Models.Caja

@{
    ViewBag.Title = "Edit";
}

    <div class="container">
        <br />
        <h2 class="alert alert-success shadow p-3 font-weight-bold">Editar caja</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                <h4>Caja</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdCaja)

                <div class="form-group">
                    @Html.LabelFor(model => model.NumCaja, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NumCaja, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NumCaja, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Guardar" class="btn btn-success" /> |  
                        @Html.ActionLink("Regresar a inicio", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        }
    </div>


@model WebApplication6.Models.AperturaCaja


<div class="container">
    <hr />
    <h1 class="text-center alert-info alert border border-info">Ingreso de Nueva Apertura de Caja</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal w-75">

            <hr />
            @Html.ValidationSummary(true, "IdCaja", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IdCaja, "Caja", htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.DropDownList("IdCaja", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCaja, "", new { @class = "text-danger" })
                </div>
            </div>

                 <div class="form-group">
                @Html.LabelFor(model => model.IdCajero, "Cajero", htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.DropDownList("IdCajero", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdCajero, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Fecha, "Fecha y hora de Apertura", htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalCordoba, "Total Disponible en Cordobas", htmlAttributes: new { @class = "control-label " })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalCordoba, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TotalCordoba, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TotalDolar, "Total Disponible en Dolar", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalDolar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TotalDolar, "", new { @class = "text-danger" })
                </div>
            </div>

            &nbsp;&nbsp;

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-success" /> |
                    @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    </div>
}



@model IEnumerable<WebApplication6.Models.Secciones>


<div class="container">
    <hr />
    <div class="alert alert-secondary">Menu de Secciones</div>

    <p>
        @Html.ActionLink("Añadir nueva seccion", "Create",null,new {@class="btn btn-primary" })
    </p>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Str_Seccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bl_Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstudiantesAula)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Str_Seccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bl_Estado)
                </td>
                <td>
                    <p> @Html.DisplayFor(modelItem => item.EstudiantesAula) / @ViewBag.SeccionMax </p>
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Seccion }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Seccion })
                </td>
            </tr>
        }

    </table>


</div>

@model IEnumerable<WebApplication6.Models.CursoEscolar>

@if (ViewBag.NoPermiso != true)
{
    <div class="container">
        <h1 class="alert bg-dark text-white ">Cursos de  @ViewBag.Anio</h1>
        <hr />
        <div class="row bg-light">
            @{
                if (Model.Count() == 0)
                {
                    <div class="display-3">
                        No hay Cursos Disponibles
                    </div>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <div class="card col-md-4 m-1 card-anio" style="width: 18rem;">
                            <div class="card-body ">
                                <h5 class="card-title">@item.NombredeCurso</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@item.AniosACursar.Str_Curso</h6>
                                <p class="card-text">@item.Modalidades.Str_Modalidad</p>
                                @Html.ActionLink("Detalles", "Details", "CursoEscolars", new { id = item.Id_Curso }, new { @class = "btn btn-success" })
                            </div>
                        </div>
                    }

                }

            }
        </div>

    </div>
}
else
{
    <h4 class="alert alert-danger bounce">No Hay Permiso</h4>

}

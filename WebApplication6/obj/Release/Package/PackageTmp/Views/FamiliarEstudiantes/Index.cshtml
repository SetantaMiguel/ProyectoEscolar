@model IEnumerable<WebApplication6.Models.FamiliarEstudiante>

@{
    ViewBag.Title = "Index";
}
<div class="container body-content">
    <br />
    <div class="col">
        <h2 class="alert alert-secondary">Responsable de <b>@ViewBag.nom</b></h2>
        <div>
            @Html.ActionLink("Añadir Nuevo", "Create", new { id = ViewBag.IdEs }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Regresar al menu anterior", "Details", "Estudiantes", new { id = ViewBag.IdEs }, new { @class = "btn btn-dark" })
        </div>

    </div>
    <hr />
    <table class="table table-responsive table-striped table-hover ">
        <tr class="bg-info">
            <th>
                @Html.DisplayNameFor(model => model.Estudiantes.Codigo_Estudiante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Domicilio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BL_Estado_Familiar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BL_Responsable)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estudiantes.Codigo_Estudiante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domicilio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Identificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BL_Estado_Familiar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BL_Responsable)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-outline-primary" })
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
        }

    </table>

</div>

@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

<div class="container">
    <hr />
    <div class="alert alert-primary">
        Roles del sistema
    </div>
    @Html.ActionLink("Crear Rol", "Create", null, new { @class = "btn btn-primary" })
    <br />
    <br />

    <table class="table table-responsive-lg col-10 ">
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Ajax.ActionLink(item.Name, "Index", "PermisosYRoles", new { Id = item.Id }, new AjaxOptions()
               {
                   HttpMethod = "GET",
                   InsertionMode = InsertionMode.Replace
                            ,
                   UpdateTargetId = "Creden"
               }, new { @class = "btn btn-success" }
                   )
                </td>
            </tr>
        }

    </table>
</div>

<div id="Creden" class="bg-light"></div>


@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

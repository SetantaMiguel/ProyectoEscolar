@model WebApplication6.Models.Evaluaciones
@{
    Layout = null;
}

<div class="modal-body container">
    <form action="/" method="post">

        <div>
            <h4 class="tab-pane">¿Como valorara esta evaluacion?</h4>
            <hr />
            <p class="">Recuerde si Elimina, se borrara por completo del sistema</p>
            <div class="row justify-content-between">
                <div class="col-4">
                    @Ajax.ActionLink("Aprobar", "AprobarCurso", new { estado = true }, new AjaxOptions { HttpMethod = "POST" },new {@class = "btn btn-outline-success"})
                </div>
                <div class="col-4">
                    @Ajax.ActionLink("Denegar", "AprobarCurso", new { estado = false }, new AjaxOptions { HttpMethod = "POST" }, new { @class = "btn btn-outline-danger" })
                </div>
            </div>
        </div>

    </form>
</div>


<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>